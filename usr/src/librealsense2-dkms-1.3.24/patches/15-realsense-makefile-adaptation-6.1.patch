From 7704c867db71662018d8d6512dc473d49ba49f3d Mon Sep 17 00:00:00 2001
From: Dmitry Perchanov <dmitry.perchanov@intel.com>
Date: Wed, 23 Aug 2023 14:20:24 +0300
Subject: [PATCH] Adjust Makefiles for the kernel modules to be build as part
 of DKMS

Signed-off-by: Dmitry Perchanov <dmitry.perchanov@intel.com>
---
 6.1.0/drivers/media/usb/uvc/Makefile     | 5 +++++
 6.1.0/drivers/media/usb/uvc/uvcvideo.h   | 2 +-
 6.1.0/drivers/media/v4l2-core/Makefile   | 4 ++++
 6.1.0/drivers/media/v4l2-core/v4l2-dev.c | 1 +
 4 files changed, 11 insertions(+), 1 deletion(-)

diff --git a/6.1.0/drivers/media/usb/uvc/Makefile b/6.1.0/drivers/media/usb/uvc/Makefile
index 4f9eee4f8..ec9da5527 100644
--- a/6.1.0/drivers/media/usb/uvc/Makefile
+++ b/6.1.0/drivers/media/usb/uvc/Makefile
@@ -5,3 +5,8 @@ ifeq ($(CONFIG_MEDIA_CONTROLLER),y)
 uvcvideo-objs  += uvc_entity.o
 endif
 obj-$(CONFIG_USB_VIDEO_CLASS) += uvcvideo.o
+
+#Librealsense-dkms addition
+CONFIG_MODULE_SIG=n
+CC := ${CC} -I ${M}/../../../../include-overrides
+ccflags-y := -DDRIVER_VERSION_SUFFIX=\"${DRIVER_VERSION_SUFFIX}\"
diff --git a/6.1.0/drivers/media/usb/uvc/uvcvideo.h b/6.1.0/drivers/media/usb/uvc/uvcvideo.h
index 9a5a5a017..8d26fcd96 100644
--- a/6.1.0/drivers/media/usb/uvc/uvcvideo.h
+++ b/6.1.0/drivers/media/usb/uvc/uvcvideo.h
@@ -45,7 +45,7 @@
  * Driver specific constants.
  */
 
-#define DRIVER_VERSION		"1.1.1"
+#define DRIVER_VERSION		"1.1.1-" DRIVER_VERSION_SUFFIX
 
 /* Number of isochronous URBs. */
 #define UVC_URBS		5
diff --git a/6.1.0/drivers/media/v4l2-core/Makefile b/6.1.0/drivers/media/v4l2-core/Makefile
index 41d91bd10..b6428c75b 100644
--- a/6.1.0/drivers/media/v4l2-core/Makefile
+++ b/6.1.0/drivers/media/v4l2-core/Makefile
@@ -6,6 +6,10 @@
 ccflags-y += -I$(srctree)/drivers/media/dvb-frontends
 ccflags-y += -I$(srctree)/drivers/media/tuners
 
+# Librealsense dkms appendix
+CC := ${CC}  -I ${M}/../../../include-overrides/uapi -I ${M}/../../../include-overrides -I ${M}/../tuners -I ${M}/../dvb-core -I ${M}/../dvb-frontends
+ccflags-y := -DDRIVER_VERSION_SUFFIX=\"${DRIVER_VERSION_SUFFIX}\"
+
 tuner-objs	:=	tuner-core.o
 
 videodev-objs	:=	v4l2-dev.o v4l2-ioctl.o v4l2-device.o v4l2-fh.o \
diff --git a/6.1.0/drivers/media/v4l2-core/v4l2-dev.c b/6.1.0/drivers/media/v4l2-core/v4l2-dev.c
index 397d55317..609fe4ad8 100644
--- a/6.1.0/drivers/media/v4l2-core/v4l2-dev.c
+++ b/6.1.0/drivers/media/v4l2-core/v4l2-dev.c
@@ -1208,3 +1208,4 @@ MODULE_AUTHOR("Alan Cox, Mauro Carvalho Chehab <mchehab@kernel.org>, Bill Dirks,
 MODULE_DESCRIPTION("Video4Linux2 core driver");
 MODULE_LICENSE("GPL");
 MODULE_ALIAS_CHARDEV_MAJOR(VIDEO_MAJOR);
+MODULE_VERSION(DRIVER_VERSION_SUFFIX);
-- 
